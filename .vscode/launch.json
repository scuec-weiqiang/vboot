{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RISC-V QEMU Debug (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/${workspaceFolderBasename}.elf",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "localhost:1234",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "set output-radix 16", // 关键命令
                    "description": "全局设置为十六进制显示"
                },
                {
                    "description": "Set architecture",
                    "text": "set architecture riscv:rv64"
                },
                {
                    "description": "Break at entry",
                    "text": "break *0x80000000"
                },
                {
                    "description": "Break at entry",
                    "text": "break *0xffffffffc0200000"
                },
                {
                    "description": "Load boot symbols",
                    "text": "add-symbol-file ${workspaceFolder}/out/${workspaceFolderBasename}.elf 0x80000000"
                },
                {
                    "description": "Load kernel symbols",
                    "text": "add-symbol-file ${workspaceFolder}/../ZZZ-OS/out/ZZZ-OS.img 0xffffffffc0200000"
                },
            ],
            "preLaunchTask": "wsl-qemu-start"
        }
    ],
    
}