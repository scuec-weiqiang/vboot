{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wsl-qemu-start",
            "type": "shell",
            "command": "/usr/local/qemu-riscv/bin/qemu-system-riscv64",
            "args": [
                "-nographic",
                "-smp", "1",
                "-machine", "virt",
                "-bios", "none",
                "-cpu","rv64",
                "-kernel", "${workspaceFolder}/out/${workspaceFolderBasename}.elf",
                "-drive", "file=${workspaceFolder}/../ZZZ/disk.img,format=raw,if=none,id=disk0",
                "-device", "virtio-blk-device,drive=disk0,bus=virtio-mmio-bus.0",
                "-global", "virtio-mmio.force-legacy=false",
                "-s", "-S",
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "cpp",
                "pattern": [
                    {
                        "regexp": "^(.*):([0-9]+):([0-9]+): (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    }
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
